<%- include('../layouts/header.ejs', {title: 'Badyet - Track & Plan your Budget!'}) %>
<div class="container-fluid">
    <div class="row main-app-container">

        <%- include('./sidepanel.ejs', {badyet: true}) %>

        <div class="col-6 main-panel-container">
                <div class="row main-date sticky-top"> 
                    <div class="col">
                      <%- include('_date.ejs', { income: income }) %>
                    </div>              
                </div>

                <div class="row main-data">
                    <div class="col category-list">
                        
                        <%- include('_incomes.ejs', { income: income }) %>

                        <% if( !categories ) { %>                                     
                            <div class="data-item removable-category">
                                <div class="col-12 income-header">
                                    <div class="row">
                                        <div class="col-6">
                                                <span class="">
                                                    <span class="income-header-income">UNTITLED</span>
                                                </span>
                                                <a role="button" data-toggle="collapse" class="btn no-focus" href="#collapseExample"><i class="fas fa-caret-up"></i></a>
                                        </div>
                                        <div class="col-6">
                                            <div class="row text-right income-header-pr-text">
                                                <div class="col-6">Planned</div>
                                                <div class="col-6">Remaining</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="collapse show" id="collapseExample">
                                    <div class="card card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <a role="button" data-toggle="" class="btn no-focus btn-add-items" href="#"><i class="fas fa-plus btn-add-paycheck-adder"></i> Add Item</a>  
                                            </div>
                                        </div>        
                                    </div>
                                </div>
                            </div>
                        <% } else { %>

                            <%- include('_categories.ejs', { categories: categories }) %>
                        <% } %>                                
                    </div>
                </div> 
                
                <div class="row main-data main-data-category">
                    <div class="col">                                
                        <div class="data-item add-group-category">
                            <input type="hidden" class="income_category_id" value="<%= income.category_id %>"> 
                            <input type="hidden" class="income_id" value="<%= income.id %>">   
                            <input type="hidden" class="user_id" value="<%= currentUserId %>">
                            <input type="hidden" class="csrf_token" name="_csrf" value="<%#= csrfToken %>">    
                            <button role="button" data-toggle="" id="add-category-button" class="btn no-focus" href="#"><i class="fas fa-plus btn-add-paycheck-adder"></i><span>ADD GROUP</span></button> 
                        </div>                                 
                    </div>
                </div>         
        </div>

        <div class="col-4 right-panel-container sticky-top">
            right-panel-container
        </div>
    </div>
</div>

<script src="/dist/jquery.min.js"></script>
<script src="/dist/js/bootstrap.min.js"></script> 
<%- include('../layouts/footer.ejs') %>